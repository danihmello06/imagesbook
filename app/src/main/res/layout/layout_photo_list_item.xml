<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    app1:cardElevation="10dp"
    app1:cardCornerRadius="5dp"
    app1:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app1:layout_constraintTop_toTopOf="parent"
            app1:layout_constraintLeft_toLeftOf="parent"
            app1:layout_constraintRight_toRightOf="parent"
            android:id="@+id/image_card"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app1:layout_constraintTop_toBottomOf="@id/image_card"
            app1:layout_constraintLeft_toLeftOf="parent"
            app1:layout_constraintRight_toRightOf="parent"
            app1:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:id="@+id/container1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/image_title"
                android:text="TÃ­tulo"
                android:textColor="#000"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/image_author"
                android:text="Daniela"
                android:textSize="15sp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>